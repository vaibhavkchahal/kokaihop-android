<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/profile_ctl_height">

    <View
        android:id="@+id/triangle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/coach_mark_box_triangle"/>

    <TextView
        android:id="@+id/textview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/triangle"
        android:layout_marginLeft="100dp"
        android:background="@drawable/coach_mark_box_background"
        android:padding="20dp"
        android:text="@string/user_profile_coach_mark"
        android:textColor="@color/white"/>

</RelativeLayout>