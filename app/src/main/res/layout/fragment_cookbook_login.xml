<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.kokaihop.userprofile.CookbooksViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_profile">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="@dimen/toolbar_height_with_status"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="@dimen/status_bar_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleMarginTop="@dimen/status_bar_height">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/my_cookbooks"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                app:font="@{`SS-ProRegular`}"/>

            <TextView
                android:id="@+id/tv_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_title"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/profile_toolbar_horizontal_margin"
                android:text="@string/create"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                app:font="@{`SS-ProRegular`}"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_cookbook"
            android:layout_width="@dimen/cookbook_login_icon_width"
            android:layout_height="@dimen/cookbook_login_icon_height"
            android:layout_marginTop="@dimen/cookbook_login_icon_margin_top"
            android:src="@drawable/ic_cookbooks_white_sm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

        <TextView
            android:id="@+id/tv_cookbook_msg1"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/cookbook_signup_login_horizontal_margin"
            android:layout_marginStart="@dimen/cookbook_signup_login_horizontal_margin"
            android:layout_marginTop="@dimen/cookbook_login_msg1_margin_top"
            android:gravity="center"
            android:text="@string/cookbooks_login_msg1"
            android:textColor="@color/white"
            android:textSize="@dimen/cookbook_login_msg1_text_size"
            app:font="@{`SS-ProRegular`}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cookbook"/>

        <TextView
            android:id="@+id/tv_cookbook_msg2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/cookbook_signup_login_horizontal_margin"
            android:layout_marginStart="@dimen/cookbook_signup_login_horizontal_margin"
            android:layout_marginTop="@dimen/cookbook_loginn_msg_margin"
            android:gravity="center"
            android:text="@string/cookbooks_login_msg2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            app:font="@{`SS-ProRegular`}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cookbook_msg1"/>

        <Button android:id="@+id/button_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/cookbook_login_btn_margin_horizontal"
                android:layout_marginStart="@dimen/cookbook_login_btn_margin_horizontal"
                android:layout_marginTop="@dimen/cookbook_login_button_margin_top"
                android:background="@drawable/button_round_corner"
                android:onClick="@{()->viewModel.showSignUpScreen()}"
                android:stateListAnimator="@null"
                android:text="@string/sign_up_now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                app:font="@{`SS-ProRegular`}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cookbook_msg2"/>


    </android.support.constraint.ConstraintLayout>
</layout>
