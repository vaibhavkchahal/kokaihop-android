<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="model" type="com.kokaihop.database.CommentRealmObject"/>
        <variable name="imageUrl" type="String"/>
    </data>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/comment_padding_bottom"
                    android:paddingLeft="@dimen/comment_item_padding_left"
                    android:paddingTop="@dimen/comment_item_padding_top">


        <ImageView
            android:id="@+id/txtview_ingredent_quantity"
            android:layout_width="@dimen/imgview_ingrdnt_quantity_width"
            android:layout_height="@dimen/imgview_ingrdnt_quantity_height"
            app:error="@{@drawable/ic_avtar_sm}"
            app:imageUrl="@{imageUrl}"
            app:isCircular="@{true}"
            app:placeholder="@{@drawable/ic_avtar_sm}"
        />

        <TextView
            android:id="@+id/txtview_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtview_coment_username_margin_left"
            android:layout_toRightOf="@+id/txtview_ingredent_quantity"
            android:text="@{model.sourceUser.userName}"
            android:textColor="@color/tab_background"
            android:textSize="@dimen/txtview_comment_user_textsize"
            app:font="@{`SS-ProRegular`}"
        />


        <TextView
            android:id="@+id/txtview_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview_comment_username"
            android:layout_marginLeft="@dimen/txtview_comment_margin_left"
            android:layout_marginRight="@dimen/txtview_comment_margin_right"
            android:layout_marginTop="@dimen/txtview_comment_margin_top"
            android:layout_toRightOf="@+id/txtview_ingredent_quantity"
            android:text="@{model.payload.comment.content}"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="@dimen/txtview_coment_textsize"
            app:font="@{`SS-ProRegular`}"
        />
    </RelativeLayout>

</layout>