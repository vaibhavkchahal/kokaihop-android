<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="recipe" type="com.kokaihop.feed.Recipe"/>
    </data>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="13dp"
                    android:background="@color/white"
                    android:paddingTop="27dp">

        <ImageView
            android:id="@+id/txtview_ingredent_quantity"
            android:layout_width="40dp"
            android:layout_height="38.1dp"
            android:src="@drawable/ic_avtar_sm"
            android:text="title"
        />

        <TextView
            android:id="@+id/txtview_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="title"
            android:textSize="15sp"
            android:textColor="@color/tab_background"
            app:font="@{`SS-ProRegular`}"
            android:layout_toRightOf="@+id/txtview_ingredent_quantity"
        />


        <TextView
            android:textSize="15sp"
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview_comment_username"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/grey_FF8D929C"
            app:font="@{`SS-ProRegular`}"
            android:layout_toRightOf="@+id/txtview_ingredent_quantity"
        />
    </RelativeLayout>

</layout>