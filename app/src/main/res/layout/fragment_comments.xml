<layout>
    <data>
        
        <variable name="viewModel" type="com.kokaihop.home.CommentsViewModel"/>
        
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height_with_status"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="@dimen/status_bar_height">

            <TextView
                android:id="@+id/txtview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/text_comments"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_comments_title"
                app:font="@{`SS-ProRegular`}"/>

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recipe_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_layout_toolbar">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</layout>