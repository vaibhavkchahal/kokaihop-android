<layout>
    <data>

        <variable name="viewModel" type="com.kokaihop.home.CommentsViewModel"/>
        <import type="android.view.View"/>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height_with_status"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="@dimen/status_bar_height">

            <TextView
                android:id="@+id/txtview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/text_comments"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_comments_title"
                app:font="@{`SS-ProRegular`}"/>

        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/progressBar_bottom"
            android:layout_below="@+id/relative_layout_toolbar"
            android:paddingTop="10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recipe_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/txtview_new_comment_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/kokaihop_orange_color"
            android:padding="10dp"
            android:text="Nya Kommentater"
            android:textColor="@color/white"/>

        <ProgressBar
            android:id="@+id/progressBar_bottom"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="@{viewModel.isProgressVisible?View.VISIBLE:View.GONE}"/>
    </RelativeLayout>
</layout>