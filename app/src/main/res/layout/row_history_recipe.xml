<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="recipe" type="com.kokaihop.feed.Recipe"/>
        <variable name="recipeHandler" type="com.kokaihop.feed.RecipeHandler"/>
        <variable name="editCookbook" type="com.kokaihop.cookbooks.model.ItemEditor"/>
        <variable name="position" type="Integer"/>
        <import type="android.view.View"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/recipe_row"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/none"
        android:paddingStart="@dimen/user_profile_recycler_padding_horizontal">
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/constraint_match_parent"
            android:contentDescription="@string/delete"
            android:paddingEnd="@dimen/row_recipe_menu_item_padding"
            android:paddingStart="@dimen/row_recipe_menu_item_padding"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete"
            android:visibility="@{recipe.recipeEdit ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_recipe_image"
            android:layout_width="@dimen/recipe_history_row_image_size"
            android:layout_height="@dimen/recipe_history_row_image_size"
            android:background="@drawable/round_corner_layout"
            android:clickable="false"
            android:contentDescription="@string/recipe_image"
            android:scaleType="fitXY"
            app:error="@{@drawable/ic_recipeplaceholder_md}"
            app:imageUrl="@{recipe.mainImageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholder="@{@drawable/ic_recipeplaceholder_md}"
            tools:src="@drawable/ic_recipeplaceholder_md"/>
        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/history_recipe_image_margin"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{recipe.title}"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="@dimen/row_follower_following_text_size"
            app:font="@{`SS-ProRegular`}"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_name"
            app:layout_constraintEnd_toStartOf="@+id/tv_delete"
            app:layout_constraintLeft_toRightOf="@+id/iv_recipe_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Recipe Name"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/history_recipe_image_margin"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@string/by + recipe.createdByName}"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="@dimen/text_size_medium"
            app:font="@{`SS-ProRegular`}"
            app:layout_constraintBottom_toTopOf="@+id/comment_rating_bar"
            app:layout_constraintEnd_toStartOf="@+id/tv_delete"
            app:layout_constraintLeft_toRightOf="@+id/iv_recipe_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_name"
            tools:text="UserName"/>

        <RatingBar
            android:id="@+id/comment_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/history_recipe_image_margin"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="@{recipe.ratingAverage}"
            android:saveEnabled="false"
            android:stepSize="0.01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_recipe_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/constraint_match_parent"
            android:background="@color/red"
            android:gravity="center"
            android:maxWidth="@dimen/row_recipe_delete_tv_width"
            android:paddingEnd="@dimen/row_recipe_menu_item_padding"
            android:paddingStart="@dimen/row_recipe_menu_item_padding"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:visibility="@{recipe.recipeDelete ? View.VISIBLE : View.GONE}"
            app:font="@{`SS-ProRegular`}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp"/>

        <View android:id="@+id/history_recipe_divider"
              android:layout_width="@dimen/constraint_match_parent"
              android:layout_height="@dimen/divider_height"
              android:layout_marginTop="@dimen/user_profile_recycler_padding_vertical"
              android:background="@color/grey_FFD4D4D4"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/iv_recipe_image"/>

    </android.support.constraint.ConstraintLayout>
</layout>