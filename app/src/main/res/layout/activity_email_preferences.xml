<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.kokaihop.editprofile.EmailPreferencesViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.kokaihop.editprofile.EmailPreferencesActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/email_pref_toolbar"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="@dimen/toolbar_height_with_status"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/status_bar_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_email_pref_back"
                    style="@style/backButton"
                    android:contentDescription="@string/cancel"
                    android:onClick="@{()->viewModel.destroy()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_email_pref_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_preferences"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    app:font="@{`SS-ProRegular`}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_email_pref_done"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/constraint_match_parent"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.updatePreferences()}"
                    android:paddingEnd="@dimen/settings_save_margin_right"
                    android:paddingStart="@dimen/none"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:font="@{`SS-ProRegular`}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/rl_email_pref_recipe_motion"
            style="@style/Button"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v)->viewModel.preferencesChanged(v)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_pref_toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:paddingBottom="@dimen/email_pref_vertical_margin"
                android:paddingEnd="@dimen/email_pref_horizontal_margin"
                android:paddingStart="@dimen/email_pref_horizontal_margin"
                android:paddingTop="@dimen/email_pref_vertical_margin"
                android:text="@string/today_s_recipes_motion"
                android:textColor="@color/grey_FF71767F"
                android:textSize="@dimen/text_size_medium"
                app:font="@{`SS-ProRegular`}"/>
            <CheckBox
                android:id="@+id/cb_email_pref_recipe_motion"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@drawable/checkbox_email_pref_selector"
                android:checked="@={viewModel.emailPreferences.settings.suggestionsOfTheDay}"
                android:paddingEnd="@dimen/email_pref_horizontal_margin"
                android:paddingStart="@dimen/none"
                tools:checked="true"/>
        </RelativeLayout>

        <View android:id="@+id/today_recipe_divider"
              android:layout_width="@dimen/constraint_match_parent"
              android:layout_height="@dimen/divider_height"
              android:background="@color/grey_FFD4D4D4"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/rl_email_pref_recipe_motion"
              tools:layout_editor_absoluteX="8dp"/>

        <RelativeLayout
            android:id="@+id/rl_email_pref_drinking_tips"
            style="@style/Button"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="@{(v)->viewModel.preferencesChanged(v)}"
            android:paddingBottom="@dimen/email_pref_vertical_margin"
            android:paddingTop="@dimen/email_pref_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today_recipe_divider">
            <TextView
                android:id="@+id/tv_email_pref_drinking_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/cb_email_pref_drinking_tips"
                android:paddingEnd="@dimen/email_pref_horizontal_margin"
                android:paddingStart="@dimen/email_pref_horizontal_margin"
                android:text="@string/drinking_tips"
                android:textColor="@color/grey_FF71767F"
                android:textSize="@dimen/text_size_medium"
                app:font="@{`SS-ProRegular`}"/>
            <CheckBox
                android:id="@+id/cb_email_pref_drinking_tips"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@drawable/checkbox_email_pref_selector"
                android:checked="@={viewModel.emailPreferences.settings.newsletters}"
                android:paddingEnd="@dimen/email_pref_horizontal_margin"
                android:paddingStart="@dimen/none"
                tools:checked="true"/>
        </RelativeLayout>

        <View android:id="@+id/today_dinking_divider"
              android:layout_width="@dimen/constraint_match_parent"
              android:layout_height="40dp"
              android:background="@color/grey_FFD4D4D4"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/rl_email_pref_drinking_tips"
              tools:layout_editor_absoluteX="8dp"/>

        <RelativeLayout
            android:id="@+id/rl_email_pref_no_email"
            style="@style/Button"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="@{(v)->viewModel.preferencesChanged(v)}"
            android:paddingBottom="@dimen/email_pref_vertical_margin"
            android:paddingTop="@dimen/email_pref_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today_dinking_divider">

            <TextView
                android:id="@+id/tv_email_pref_no_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/cb_email_pref_no_email"
                android:paddingEnd="@dimen/email_pref_horizontal_margin"
                android:paddingStart="@dimen/email_pref_horizontal_margin"
                android:text="@string/no_email"
                android:textColor="@color/grey_FF71767F"
                android:textSize="@dimen/text_size_medium"
                app:font="@{`SS-ProRegular`}"/>
            <CheckBox
                android:id="@+id/cb_email_pref_no_email"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@drawable/checkbox_email_pref_selector"
                android:checked="@={viewModel.emailPreferences.settings.noEmails}"
                android:paddingEnd="@dimen/email_pref_horizontal_margin"
                android:paddingStart="@dimen/none"
                tools:checked="true"/>
        </RelativeLayout>

        <View android:id="@+id/today_noemail_divider"
              android:layout_width="@dimen/constraint_match_parent"
              android:layout_height="@dimen/constraint_match_parent"
              android:background="@color/grey_FFD4D4D4"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/rl_email_pref_no_email"/>
    </android.support.constraint.ConstraintLayout>
</layout>