<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="model" type="com.kokaihop.recipedetail.RecipeCookingDirection"/>
    </data>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/row_direction_padding_left"
                    android:paddingRight="@dimen/row_direction_padding_right"
                    android:paddingTop="@dimen/row_direction_padding_top">

        <TextView
            android:id="@+id/txtview_direction_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="@dimen/txtview_direction_textsize"
        />

        <TextView
            android:id="@+id/txtview_direction"
            android:layout_width="@dimen/txtview_direction_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtview_direction_margin_left"
            android:layout_toRightOf="@+id/txtview_ingredent_quantity"
            android:text="@{model.direction}"
            android:textColor="@color/grey_FF71767F"
            android:paddingBottom="@dimen/row_direction_padding_bottm"
            android:textSize="@dimen/txtview_direction_textsize"
        />

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@+id/txtview_direction"
              android:background="@color/grey_FFF3F3F3"/>


    </RelativeLayout>

</layout>