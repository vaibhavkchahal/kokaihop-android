<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.kokaihop.editprofile.ChangePasswordActivity">
    <data>
        <variable name="viewModel" type="com.kokaihop.editprofile.ChangePasswordViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="@dimen/constraint_match_parent"
            android:layout_height="@dimen/toolbar_height_with_status"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/status_bar_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_changePassword_back"
                    style="@style/backButton"
                    android:contentDescription="@string/cancel"
                    android:onClick="@{()->viewModel.backToSettings()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_changePassword_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    app:font="@{`SS-ProRegular`}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_changePassword_done"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/constraint_match_parent"
                    android:layout_marginEnd="@dimen/settings_save_margin_right"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.changePassword()}"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    app:font="@{`SS-ProRegular`}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>

        <EditText android:id="@+id/et_new_password"
                  android:layout_width="@dimen/constraint_match_parent"
                  android:layout_height="@dimen/change_password_et_height"
                  android:layout_marginTop="@dimen/changepass_new_margin_top"
                  android:backgroundTint="@color/transparent_color"
                  android:drawablePadding="@dimen/changepassword_et_padding"
                  android:drawableStart="@drawable/ic_lock_sm"
                  android:hint="@string/new_password"
                  android:inputType="textPassword"
                  android:padding="@dimen/changepassword_et_padding"
                  android:textCursorDrawable="@drawable/edittext_cursor"
                  android:textSize="@dimen/text_size_small"
                  app:font="@{`SS-ProRegular`}"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/settings_toolbar"/>

        <View android:id="@+id/settings_newpass_divider"
              android:layout_width="@dimen/constraint_match_parent"
              android:layout_height="@dimen/divider_height"
              android:layout_marginStart="@dimen/change_password_seperator_margin"
              android:layout_marginTop="@dimen/changepass_divider_margin_top"
              android:background="@color/grey_FFD4D4D4"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/et_new_password"/>

        <EditText android:id="@+id/et_confirm_password"
                  android:layout_width="@dimen/constraint_match_parent"
                  android:layout_height="@dimen/change_password_et_height"
                  android:layout_marginTop="@dimen/changepass_confirm_margin_top"
                  android:backgroundTint="@color/transparent_color"
                  android:drawablePadding="@dimen/changepassword_et_padding"
                  android:drawableStart="@drawable/ic_lock_sm"
                  android:hint="@string/confirm_password"
                  android:inputType="textPassword"
                  android:padding="@dimen/changepassword_et_padding"
                  android:textCursorDrawable="@drawable/edittext_cursor"
                  android:textSize="@dimen/text_size_small"
                  app:font="@{`SS-ProRegular`}"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/settings_newpass_divider"/>

        <View android:id="@+id/settings_confirmpass_divider"
              android:layout_width="@dimen/constraint_match_parent"
              android:layout_height="@dimen/divider_height"
              android:layout_marginStart="@dimen/change_password_seperator_margin"
              android:layout_marginTop="@dimen/changepass_divider_margin_top"
              android:background="@color/grey_FFD4D4D4"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/et_confirm_password"/>

    </android.support.constraint.ConstraintLayout>
</layout>