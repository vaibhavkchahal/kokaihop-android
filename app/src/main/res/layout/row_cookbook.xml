<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="cookbook" type="com.kokaihop.userprofile.model.Cookbook"/>
        <variable name="user" type="com.kokaihop.userprofile.model.User"/>
        <variable name="position" type="Integer"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/history_row"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/user_profile_recycler_padding_horizontal"
        android:paddingRight="@dimen/user_profile_recycler_padding_horizontal">

        <ImageView
            android:id="@+id/iv_recipe_image"
            android:layout_width="@dimen/recipe_icon_size"
            android:layout_height="@dimen/recipe_icon_size"
            android:background="@drawable/round_corner_layout"
            android:clickable="false"
            android:contentDescription="@string/recipe_image"
            android:scaleType="fitXY"
            app:error="@{@drawable/ic_recipeplaceholder_md}"
            app:imageUrl="@{cookbook.mainImageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholder="@{@drawable/ic_recipeplaceholder_md}"
            tools:src="@drawable/ic_recipeplaceholder_md"/>
        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/history_recipe_image_margin"
            android:clickable="false"
            android:text="@{cookbook.name}"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="@dimen/row_follower_following_text_size"
            app:font="@{`SS-ProRegular`}"
            tools:text="Cookbook"
            app:layout_constraintLeft_toRightOf="@+id/iv_recipe_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_name"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/history_recipe_image_margin"
            android:clickable="false"
            android:text="@{ @string/recipe + cookbook.total}"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="@dimen/text_size_medium"
            app:font="@{`SS-ProRegular`}"
            app:layout_constraintLeft_toRightOf="@+id/iv_recipe_image"
            tools:text="Recipe Count"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_name"
            android:layout_marginLeft="20dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

        <View android:id="@+id/history_recipe_divider"
              android:layout_width="0dp"
              android:layout_height="1dp"
              android:layout_marginTop="@dimen/user_profile_recycler_padding_vertical"
              android:background="@color/grey_FFD4D4D4"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/iv_recipe_image"/>

    </android.support.constraint.ConstraintLayout>
</layout>