<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.kokaihop.authentication.forgotpassword.ForgotPaswdViewModel"/>
    </data>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView android:id="@+id/text_view_label_sign_up"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/signup_tv_title_margin_top"
                  android:gravity="center_horizontal"
                  android:text="@string/sign_up"
                  android:textColor="@color/white"
                  android:textSize="@dimen/signup_tv_text_size_large"
                  app:font="@{`SourceSansPro-Bold.ttf`}"/>

        <ImageView android:id="@+id/image_view_close"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/signup_iv_close_margin_right"
                   android:layout_marginTop="@dimen/signup_iv_close_margin_top"
                   android:src="@drawable/ic_close_md"/>

        <View android:id="@+id/view_seperator"
              android:layout_width="match_parent"
              android:layout_height="@dimen/signup_line_title_height"
              android:layout_below="@+id/text_view_label_sign_up"
              android:layout_marginTop="@dimen/signup_line_title_margin_top"
              android:background="#ffffff"/>

        <EditText android:id="@+id/edit_text_email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  app:font="@{`SS-ProRegular`}"
                  android:hint="@string/enter_your_registered_email"
                  android:text="@={viewModel.userName}"
                  android:inputType="textEmailAddress"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_email"
                android:text="@string/submit"
                android:layout_marginLeft="@dimen/margin_horizontal_button_forgot_password"
                android:layout_marginRight="@dimen/margin_horizontal_button_forgot_password"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/sign_up_button_background"
                app:font="@{`SS-ProRegular`}"
                android:textColor="@color/white"
                android:textSize="@dimen/signup_tv_text_size_large"
                android:onClick="@{(v)->viewModel.forgot(v)}"
                android:textAllCaps="false"/>
    </RelativeLayout>

        <include
            layout="@layout/progress_bar"
            bind:viewModel="@{viewModel}"/>

    </FrameLayout>
</layout>
