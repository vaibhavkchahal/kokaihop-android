<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.kokaihop.authentication.login.LoginViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#513200">

        <TextView android:id="@+id/text_view_label_login"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/login_title_margin_top"
                  android:gravity="center_horizontal"
                  android:text="@string/login"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_size_large"
                  app:font="@{`SS-ProRegular`}"/>

        <ImageView android:id="@+id/image_view_close"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/signup_iv_close_margin_right"
                   android:layout_marginTop="@dimen/close_image_margin_top"
                   android:onClick="@{(v)->viewModel.finishLogin(v)}"
                   android:src="@drawable/ic_close_md"/>

        <View android:id="@+id/view_seperator"
              android:layout_width="match_parent"
              android:layout_height="@dimen/signup_line_title_height"
              android:layout_below="@+id/text_view_label_login"
              android:layout_marginTop="@dimen/title_margin_top"
              android:background="#ffffff"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_seperator"
            android:paddingLeft="@dimen/login_padding_left"
            android:paddingRight="@dimen/login_padding_right"
            android:paddingTop="@dimen/padding_top_login_scroll">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">

                <Button android:id="@+id/button_facebook_sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/sign_up_facebook_button_background"
                        android:drawableLeft="@drawable/ic_facebook_md"
                        android:onClick="@{(v)->viewModel.facebookLogin(v)}"
                        android:padding="@dimen/padding_drawable_facebook_sign_up"
                        android:text="@string/sign_up_via_facebook"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_large"
                        app:font="@{`SS-ProRegular`}"/>


                <TextView android:id="@+id/textview_or_login"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/button_facebook_sign_up"
                          android:layout_marginTop="25dp"
                          android:gravity="center"
                          android:text="@string/or_login_text"
                          android:textColor="@color/white"
                          android:textSize="@dimen/text_size_medium"
                          app:font="@{`SS-ProRegular`}"/>


                <EditText android:id="@+id/edit_text_email"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/textview_or_login"
                          android:layout_marginTop="@dimen/margin_top_login_email"
                          android:backgroundTint="@color/white"
                          android:hint="@string/email"
                          android:inputType="textEmailAddress"
                          android:lineSpacingExtra="6dp"
                          android:maxLines="1"
                          android:text="@={viewModel.userName}"
                          android:textColor="@color/white"
                          android:textColorHint="@color/white"
                          android:textSize="@dimen/text_size_large"
                          app:font="@{`SS-ProRegular`}"/>

                <EditText android:id="@+id/edit_text_password"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/edit_text_email"
                          android:layout_marginTop="@dimen/margin_top_login_passwd"
                          android:backgroundTint="@color/white"
                          android:hint="@string/password"
                          android:inputType="textPassword"
                          android:lineSpacingExtra="7dp"
                          android:maxLines="1"
                          android:text="@={viewModel.password}"
                          android:textColor="@color/white"
                          android:textColorHint="@color/white"
                          android:textSize="@dimen/text_size_large"
                          app:font="@{`SS-ProRegular`}"/>

                <Button android:id="@+id/button_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_text_password"
                        android:layout_marginTop="@dimen/margin_top_login_button"
                        android:background="@color/kokaihop_orange_color"
                        android:onClick="@{(v)->viewModel.login(v)}"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_large"
                        app:font="@{`SS-ProRegular`}"/>

                <TextView android:id="@+id/textview_forgot_password"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/button_login"
                          android:layout_marginTop="@dimen/margin_top_forgot_passwd"
                          android:gravity="center"
                          android:onClick="@{(v)->viewModel.openForgotPasswordScreen(v)}"
                          android:text="@string/forgot_password"
                          android:textColor="@color/white"
                          android:textSize="@dimen/text_size_small"
                          app:font="@{`SS-ProRegular`}"/>

                <TextView android:id="@+id/text_view_sign_up_now"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/textview_forgot_password"
                          android:layout_marginTop="@dimen/margin_top_signupnow"
                          android:gravity="center"
                          android:onClick="@{(v)->viewModel.openSignupScreen(v)}"
                          android:text="@string/signup_now_text"
                          android:textColor="@color/white"
                          android:textSize="@dimen/text_size_small"
                          app:font="@{`SS-ProRegular`}"/>
            </RelativeLayout>

        </ScrollView>
        <include
            layout="@layout/progress_bar"
            bind:viewModel="@{viewModel}"/>
    </RelativeLayout>
</layout>
