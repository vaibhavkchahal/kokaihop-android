<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="model" type="com.kokaihop.database.CommentRealmObject"/>
        <variable name="imageUrl" type="String"/>
        <variable name="latestCommentUsername" type="String"/>
        <variable name="replyUserImageUrl" type="String"/>
        <variable name="handler" type="com.kokaihop.comments.CommentsHandler"/>
        <import type="android.view.View"/>

    </data>


    <RelativeLayout
        android:id="@+id/relative_layout_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/comment_padding_bottom"
        android:paddingLeft="@dimen/comment_item_padding_left"
        android:paddingTop="@dimen/comment_item_padding_top">


        <ImageView
            android:id="@+id/imageview_comment_user_image"
            android:layout_width="@dimen/imgview_comment_user_image_width"
            android:layout_height="@dimen/imgview_comment_user_image_height"
            app:error="@{@drawable/ic_avtar_sm}"
            app:imageUrl="@{imageUrl}"
            app:isCircular="@{true}"
            app:placeholder="@{@drawable/ic_avtar_sm}"
        />

        <TextView
            android:id="@+id/txtview_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txtview_coment_username_margin_left"
            android:layout_toRightOf="@+id/imageview_comment_user_image"
            android:text="@{model.sourceUser.userName}"
            android:textColor="@color/tab_background"
            android:textSize="@dimen/txtview_comment_user_textsize"
            app:font="@{`SS-ProRegular`}"
        />


        <TextView
            android:id="@+id/txtview_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview_comment_username"
            android:layout_marginLeft="@dimen/txtview_comment_margin_left"
            android:layout_marginRight="@dimen/txtview_comment_margin_right"
            android:layout_marginTop="@dimen/txtview_comment_margin_top"
            android:layout_toRightOf="@+id/imageview_comment_user_image"
            android:text="@{model.payload.comment.content}"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="@dimen/txtview_coment_textsize"
            app:font="@{`SS-ProRegular`}"
        />

        <TextView
            android:id="@+id/reply_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview_comment"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/imageview_comment_user_image"
            android:text="@string/text_reply"
            android:textColor="@color/grey_FF8D929C"
            android:textSize="10dp"
            app:font="@{`SS-ProRegular`}"/>


        <RelativeLayout
            android:id="@+id/relative_layout_replied_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reply_textview"
            android:layout_marginLeft="@dimen/comment_reply_section_margin_left"
            android:layout_marginTop="20dp"
            android:onClick="@{(v)->handler.openReplyScreen(context,model._id,model.payload.recipe._id)}">

            <ImageView
                android:id="@+id/imageview_reply_user_image"
                android:layout_width="@dimen/reply_user_image_height_width"
                android:layout_height="@dimen/reply_user_image_height_width"
                app:error="@{@drawable/ic_avtar_sm}"
                app:imageUrl="@{replyUserImageUrl}"
                app:isCircular="@{true}"
                app:placeholder="@{@drawable/ic_avtar_sm}"
            />
            <TextView
                android:id="@+id/txtview_reply_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/txtview_coment_username_margin_left"
                android:layout_toRightOf="@+id/imageview_reply_user_image"
                android:gravity="center_vertical"
                android:text="@{handler.checkOnReplyEventText(context,latestCommentUsername,model.payload.replyCount)}"
                android:textColor="@color/tab_background"
                android:textSize="@dimen/txtview_comment_user_textsize"
                app:font="@{`SS-ProRegular`}"
            />

        </RelativeLayout>
    </RelativeLayout>

</layout>