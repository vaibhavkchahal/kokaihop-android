<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="recipe" type="com.kokaihop.database.Recipe"/>
    </data>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
    >

        <ImageView
            android:id="@+id/iv_recipe"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_intro"
        />

        <TextView
            android:layout_width="76dp"
            android:layout_height="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:text="@{recipe.title}"
        />

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_recipe"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:text="@{recipe.title}"
            android:textSize="17sp"
        />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_recipe_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9.4dp"/>

        <TextView
            android:id="@+id/tv_recipe_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6.6dp"
            android:text="@{recipe.title}"
            android:textSize="11sp"
        />

        <View
            android:id="@+id/recipe_bottom_seprator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_recipe_date"
            android:layout_marginTop="14.5dp"
            android:background="@color/recipe_bottom_separator_color"/>


        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="43.5dp"
                        android:layout_below="@+id/recipe_bottom_seprator"
                        android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="17.3dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_intro"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6.6dp"
                android:layout_toRightOf="@+id/iv_profile"
                android:text="@{recipe.title}"
                android:textSize="11sp"
            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_comment"
                android:text="@{recipe.title}"
                android:textSize="11sp"
            />
            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="39.7dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_intro"
            />
        </RelativeLayout>
    </RelativeLayout>

</layout>