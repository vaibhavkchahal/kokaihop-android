<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="com.kokaihop.utility.DateTimeUtils"/>
        <variable name="recipe" type="com.kokaihop.database.Recipe"/>
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recipe_item_border">

        <ImageView
            android:id="@+id/iv_recipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_img_height"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_intro"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tv_like_height"
            android:layout_marginLeft="@dimen/tv_like_margin_left"
            android:layout_marginTop="@dimen/tv_like_margin_top"
            android:background="@drawable/recipe_likes_border"
            android:drawablePadding="@dimen/tv_likes_drawable_padding"
            android:drawableStart="@{recipe.isFavorite ? @drawable/ic_like_sm : @drawable/ic_unlike_sm}"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/tv_likes_padding_left"
            android:paddingRight="9dp"
            android:text="@{String.valueOf(recipe.counter.likes)}"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/iv_recipe"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/tv_recipe_name_margin_left"
            android:layout_marginTop="@dimen/tv_recipe_name_margin_top"
            android:text="@{recipe.title}"
            android:textColor="@color/recipe_title_color"
            android:textSize="@dimen/textsize_tv_recipe_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:maxLength="19"
            android:gravity="center"
            app:font="@{`SS-ProRegular`}"
        />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_below="@+id/tv_recipe_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/rating_bar_margin_top"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="@{Float.parseFloat(String.valueOf(recipe.rating.average))}"
            android:progressDrawable="@drawable/recipe_rating_bar"
            android:stepSize="0.01"/>


        <TextView
            android:id="@+id/tv_recipe_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tv_recipe_date_margin_top"
            android:text="@{DateTimeUtils.getDate(recipe.dateCreated,String.valueOf(`MMM dd, yyyy`))}"
            android:textColor="@color/cook_something_text_color"
            android:textSize="@dimen/textsize_tv_recipe_date"
            app:font="@{`SS-ProRegular`}"
        />

        <View
            android:id="@+id/recipe_bottom_seprator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_separator_height"
            android:layout_below="@+id/tv_recipe_date"
            android:layout_marginTop="@dimen/recipe_separator_margin_top"
            android:background="@color/recipe_bottom_separator_color"/>


        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/bottom_view_height"
                        android:layout_below="@+id/recipe_bottom_seprator"
                        android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/iv_profile_height_width"
                android:layout_height="@dimen/iv_profile_height_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/iv_profile_margin_left"
                android:scaleType="fitXY"
                android:src="@drawable/ic_avtar_sm"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_user_name_margin_left"
                android:layout_toRightOf="@+id/iv_profile"
                android:text="@{recipe.createdBy.name}"
                android:textColor="@color/grey_CC999999"
                android:textSize="@dimen/textsize_tv_user_name"
                android:maxLength="7"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/tv_comment_count"
                app:font="@{`SS-ProRegular`}"/>


            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/tv_comment_count_margin_left"
                android:layout_marginRight="@dimen/tv_coment_count_margin_right"
                android:text="@{String.valueOf(recipe.counter.comments)}"
                android:textColor="@color/grey_FF999999"
                android:textSize="@dimen/tv_comment_count_textsize"
                app:font="@{`SS-ProRegular`}"/>

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="@dimen/iv_comment_height_width"
                android:layout_height="@dimen/iv_comment_height_width"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/iv_comment_margin_right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_comment_sm"/>

        </RelativeLayout>
    </RelativeLayout>

</layout>